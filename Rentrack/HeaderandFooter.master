<%@ Master Language="C#" AutoEventWireup="true" CodeFile="HeaderandFooter.master.cs" Inherits="HeaderandFooter" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1" runat="server">
    <title></title>

    <!--Bootstrap and jQuery-->
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <script type="text/javascript" src="Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>

    <!--Font Awesome-->
    <link rel="stylesheet" href="Content/font-awesome.min.css"/>
    
    <script>
        $(document).ready(function () {
            $("#headerourservices").active(function () {
                $(this).addClass('selected');
            });
        });

        
    </script>

    <style>
        /*Header*/
        .navbar-custom {
            background-color: #23305D ; /*Header's dark blue*/
            font-family: HelvLight;
        }
        .header-item {
            margin-right: 20px;
            border-bottom: 3px solid #23305D;
            display:inline;
        }
        .navbar-custom {
            color: red;
        }
        .headeritems {
            margin-top: 10px;
            margin-right: 9%;
            margin-left: 20px;
        }
            .header-item:hover, .header-item:active, .header-item:active{
                border-bottom: 3px solid #eda136;
                transition-duration: 1s;
            }

        @media (max-width: 768px) {          
            .header-item {              
                margin-top: 5px;
                padding-bottom:0px;
                display: inline-block;
            }
                .header-item:hover {
                    color: orange;
                    border: none;
                }
        }
        .navbar-nav > li > a, .navbar-brand {
            padding-top:0px !important; padding-bottom:0 !important;
            height: 35px;
        }
        .navbar {min-height:35px !important;}
        .navbar-toggle {
             padding: 0 0;
             margin-top: 7px;
             margin-bottom: 0;
        }
        .dropdown-menu > a:hover, .dropdown-menu > a:focus{
            background-color: #eda136; /*Orange*/
            color: white;
            transition-duration: 0.6s;
        }
        .dropdown-menu {
            border: none;
            box-shadow: 2px 2px 10px #848484;
        }
        .animate {
            animation-duration: 0.3s;
            -webkit-animation-duration: 0.3s;
            animation-fill-mode: both;
            -webkit-animation-fill-mode: both;
        }
        @keyframes slideIn {
          0% {
            transform: translateY(1rem);
            opacity: 0;
          }
          100% {
            transform:translateY(0rem);
            opacity: 1;
          }
          0% {
            transform: translateY(1rem);
            opacity: 0;
          }
        }
        @-webkit-keyframes slideIn {
          0% {
            -webkit-transform: transform;
            -webkit-opacity: 0;
          }
          100% {
            -webkit-transform: translateY(0);
            -webkit-opacity: 1;
          }
          0% {
            -webkit-transform: translateY(1rem);
            -webkit-opacity: 0;
          }
        }
        .slideIn {
          -webkit-animation-name: slideIn;
          animation-name: slideIn;
        }

        .selected {
          color: white;
          border-bottom: 3px solid #eda136;
        }

        /*Footer*/
        #upperfooter {
            color: white;
            background-color: #202b56;
            padding: 50px 50px 20px 50px;
        }
            #upperfooter ul a {
                color: white;
            }
            #upperfooter ul a:hover {
                text-decoration: none;
            }
            #upperfooter ul {
                list-style-type: none; 
                font-family: Georgia;
            }
            #upperfooter ul a i{
                font-size: 30px;
            }
        .footerheadings {
            padding-bottom: 20px;
            font-family: Calibri;
            font-size: 20px;
            font-weight: 300;
        }
        #lowerfooter {
            background-color: #192347;
            color: white;
            padding-top: 10px;
            font-family: Georgia;
            text-align: center;
        }
        footer {
           position:absolute;
           bottom:0;
           width:100%;
        }
        </style>
